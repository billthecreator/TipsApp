<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/app_bar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/primaryColor"
                app:cardCornerRadius="0dp"
                app:cardElevation="2dp"
                android:clickable="true">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center"
                        android:gravity="center"
                        android:background="#ffffffff"
                        android:rowCount="2"
                        android:columnCount="1">

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp">

                            <TextView

                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:textSize="@dimen/title"
                                android:textColor="@color/primary_text_default_material_light"
                                android:layout_column="0"
                                android:layout_row="0"
                                android:text="Bill amount" />
                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:textSize="@dimen/subhead"
                                android:textColor="@color/secondary_text_default_material_light"
                                android:layout_column="0"
                                android:layout_row="1"
                                android:text="Enter the bill amount below" />
                        </GridLayout>


                    </GridLayout>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="bottom">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$45.00"
                            android:padding="24dp"
                            android:textSize="@dimen/display2"
                            android:textColor="#FFF"
                            android:textAlignment="center"
                            android:gravity="center|center_horizontal" />

                    </TableRow>

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center"
                        android:gravity="center"
                        android:background="#ffffffff"
                        android:rowCount="2"
                        android:columnCount="1">

                        <!--<LinearLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:padding="16dp">-->
                        <!--<TextView-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:textSize="@dimen/title"-->
                        <!--android:textColor="@color/primaryText"-->
                        <!--android:layout_column="0"-->
                        <!--android:layout_row="0"-->
                        <!--android:text="Bill amount" />-->
                        <!--</LinearLayout>-->

                        <!--<View style="@style/Divider" />-->

                        <LinearLayout
                            android:layout_gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp">

                            <Button
                                android:layout_column="0"
                                android:layout_row="1"
                                android:id="@+id/okbutton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="edit"
                                android:longClickable="false"
                                style="@android:style/Widget.Material.Button.Borderless"
                                android:textColor="#000" />
                        </LinearLayout>

                    </GridLayout>


                </TableLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/bright_foreground_material_dark"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center">

                        <ImageButton
                            android:src="@drawable/ic_remove_circle_outline_black_36dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:layout_gravity="center|left"
                            android:padding="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="200dp"
                            android:text="20%"
                            android:padding="4dp"
                            android:textSize="@dimen/display1"
                            android:textColor="@color/primaryText"
                            android:gravity="center|center_horizontal"
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal" />


                        <ImageButton
                            android:src="@drawable/ic_add_circle_outline_black_36dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:maxWidth="36dp"
                            android:layout_gravity="center|right"
                            android:padding="4dp" />
                    </LinearLayout>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tip percentage"
                            android:padding="8dp"
                            android:textColor="@color/primaryText"
                            android:textSize="@dimen/subhead"
                            android:textAlignment="center"
                            android:layout_gravity="center|center_horizontal"
                            android:gravity="center|center_horizontal" />
                    </TableRow>


                </TableLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/bright_foreground_material_dark"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="0dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="16dp">

                    <view
                        class="android.support.v7.widget.SwitchCompat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/roundSwitch"
                        android:text="Round Total Up"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:textSize="@dimen/body1"
                        android:textStyle="normal"
                        android:textColor="#757575"
                        android:padding="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_column="0">

                            <GridLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="Tip amount"
                                    android:id="@+id/tipAmountTextHeader"
                                    android:layout_row="0"
                                    android:layout_column="0"
                                    android:textColor="@color/primaryText"
                                    android:textSize="@dimen/caption"
                                    android:gravity="left|right|top"
                                    android:layout_gravity="left|right" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="Total amount"
                                    android:id="@+id/totalAmountTextHeader"
                                    android:layout_row="0"
                                    android:layout_column="1"
                                    android:textColor="@color/primaryText"
                                    android:textSize="@dimen/caption"
                                    android:gravity="right|top"
                                    android:layout_gravity="right" />

                            </GridLayout>
                        </TableRow>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_column="0">

                            <GridLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="$54.00"
                                    android:id="@+id/totalAmount"
                                    android:layout_row="0"
                                    android:layout_column="1"
                                    android:textColor="@color/primaryText"
                                    android:textSize="@dimen/display1"
                                    android:gravity="right|top"
                                    android:layout_gravity="left|right" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="$9.00"
                                    android:id="@+id/tipAmount"
                                    android:layout_row="0"
                                    android:layout_column="0"
                                    android:textSize="@dimen/display1"
                                    android:textColor="@color/primaryText"
                                    android:textAlignment="center"
                                    android:singleLine="true"
                                    android:elegantTextHeight="true"
                                    android:gravity="left|top"
                                    android:layout_gravity="left" />
                            </GridLayout>
                        </TableRow>
                    </FrameLayout>
                </TableLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>